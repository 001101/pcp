   obj:/usr/lib/libpcp.so*
   fun:__pmConfig
   fun:pmGetConfig
   obj:/usr/lib/libpcp.so*
   obj:/usr/lib/libpcp.so*
   fun:pmLoadNameSpace
   fun:*
}

