#! /bin/sh
#
# Behave like the IRIX ls for files not found ... to avoid QA
# rewriting

uname=`uname`
if [ "$uname" = IRIX -o "$uname" = IRIX64 ]; then
    exec /bin/ls $*
fi

# fixup linux
badarg=false
okarg=false
args=""
for file
do
    case $file
    in
	-*)
		args="$args $file"
		;;
	*)
		if [ ! -e $file -a ! -L $file ]
		then
		    badarg=true
		    echo "Cannot access $file: No such file or directory"
		else
		    okarg=true
		    args="$args $file"
		fi
		;;
    esac
done

if $badarg
then
    if $okarg
    then
	:
    else
	exit 0
    fi
fi

/bin/ls $args
