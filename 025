#! /bin/sh
# PCP QA Test No. 025
# $Revision: 2.9 $
# pmcd reconnect and error propagation
#
# Copyright (c) 1995-2002 Silicon Graphics, Inc.  All Rights Reserved.
#

seq=`basename $0`
echo "QA output created by $seq"

# get standard filters
. ./common.product
. ./common.filter

tmp=/tmp/$$
trap "rm -f $tmp.*; exit" 0 1 2 3 15

# real QA test starts here
if [ ! -x ./sudo ]
then
    echo "`basename $0`: Need ./sudo to run this test as root"
    exit 1
fi

./sudo src-oss/pmcdgone 2>&1 \
| tee $seq.full \
| sed \
    -e '/__pmGetPDU: fd=3 BINARY hdr: Broken pipe/d' \
    -e '/pmLookupDesc:/s/Connection reset by peer/IPC protocol failure/' \
| _filter_pcp_start
