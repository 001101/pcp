#!/bin/sh

# Slackware build script for pcp

# Roman Revyakin <rrevyakin@aconex.com> 
# ver 1.1 2009-10-06 

PRGNAM=@package_name@
VERSION=@package_version@
ARCH=${ARCH:-i486}
BUILD=${BUILD:-@package_build@}
TAG=${TAG:-_SBo}

CWD=$(pwd)
TMP=${TMP:-/tmp/SBo}
PKG=$TMP/package-$PRGNAM
OUTPUT=${OUTPUT:-/tmp}

if [ "$ARCH" = "i486" ]; then
  SLKCFLAGS="-O2 -march=i486 -mtune=i686"
  LIBDIRSUFFIX=""
elif [ "$ARCH" = "i686" ]; then
  SLKCFLAGS="-O2 -march=i686 -mtune=i686"
  LIBDIRSUFFIX=""
elif [ "$ARCH" = "x86_64" ]; then
  SLKCFLAGS="-O2 -fPIC"
  LIBDIRSUFFIX="64"
fi

set -e

rm -rf "$PKG"
mkdir -p "$TMP" "$PKG" "$OUTPUT"
cd "$TMP"
rm -rf "$PRGNAM-$VERSION"
tar xzvf "$CWD/$PRGNAM-$VERSION${BUILD:+-$BUILD}.src.tar.gz" || exit 1
cd "$PRGNAM-$VERSION"
chown -R root:root .
chmod -R a-s,u+w,go+r-w .

make configure_${PRGNAM}

CFLAGS="$SLKCFLAGS" \
CXXFLAGS="$SLKCFLAGS" \
./configure \
  --prefix=/usr \
  --libdir=/usr/lib${LIBDIRSUFFIX} \
  --sysconfdir=/etc \
  --localstatedir=/var \
  --mandir=/usr/man \
  --infodir=/usr/info \
  --datadir="/usr/share/$PRGNAM" \
  --includedir="/usr/include/$PRGNAM" \
  --build=$ARCH-slackware-linux

DIST_ROOT="$PKG" make install || exit 1 

# Strip some libraries and binaries
( cd "$PKG"
  find . | xargs file | grep "executable" | grep ELF | cut -f 1 -d : | \
    xargs strip --strip-unneeded 2> /dev/null
  find . | xargs file | grep "shared object" | grep ELF | cut -f 1 -d : | \
    xargs strip --strip-unneeded 2> /dev/null
)

# Compress man pages if they exist
if [ -d "$PKG/usr/man" ]
then
    ( cd "$PKG/usr/man"
        find . -type f -exec gzip -9 {} \;
        for i in $(find . -type l) ; do ln -s $(readlink $i).gz $i.gz ; rm $i ; done
    ) 
fi

# Compress info pages if they exist (and remove the dir file)
if [ -d $PKG/usr/info ]; then
    gzip -9 "$PKG"/usr/info/*.info
    rm -f "$PKG/usr/info/dir"
fi

# Move the documentation to where it belongs to 
for DIR in doc 
do
    mkdir -p "$PKG/usr/$DIR/$PRGNAM-$VERSION"
    find "$PKG/usr/$DIR" -depth -mindepth 1 -maxdepth 1 ! -name "$PRGNAM-$VERSION" -exec mv {} "$PKG/usr/$DIR/$PRGNAM-$VERSION" \;
done

cat "$CWD/$PRGNAM.SlackBuild" > "$PKG/usr/doc/$PRGNAM-$VERSION/$PRGNAM.SlackBuild"

# Move the startup scripts to where they belong to and disable them 
for RC_SCRIPT in $(find "$PKG/etc/rc.d/init.d" -type f -printf "%f\n")
do
    mv "$PKG/etc/rc.d/init.d/$RC_SCRIPT" "$PKG/etc/rc.d/rc.$RC_SCRIPT" 
    chmod 644 "$PKG/etc/rc.d/rc.$RC_SCRIPT"
done 

# Add doinst.sh to package (if it exists)
if [ -e "$CWD/doinst.sh.gz" ]; then
    zcat "$CWD/doinst.sh.gz" > "$PKG/install/doinst.sh"
fi

mkdir -p "$PKG/install"
cat "$CWD/slack-desc" > "$PKG/install/slack-desc"

cd "$PKG"
/sbin/makepkg -l y -c n "$OUTPUT/$PRGNAM-$VERSION-$ARCH-$BUILD$TAG.${PKGTYPE:-tgz}"
