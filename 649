#! /bin/sh
# PCP QA Test No. 649
# Testing MMV client flags behaviour
#
# Copyright (c) 2010 Aconex.  All Rights Reserved.
#
# creator
owner=nathans

seq=`basename $0`

echo "QA output created by $seq"

# get standard filters
. ./common.product
. ./common.check
. ./common.filter

tmp=/tmp/$$
status=1
done_clean=false
MMV_STATS_DIR="$PCP_TMP_DIR/mmv"
here=`pwd`

_cleanup()
{
    if $done_clean
    then
	:
    else
	if [ -f $tmp.pmcd.conf ]
	then
	    $here/sudo mv $tmp.pmcd.conf $PCP_PMCDCONF_PATH
	fi
	if [ -d $tmp.mmv.dir ]
	then
	    rm -fr "$MMV_STATS_DIR"
	    $here/sudo mv $tmp.mmv.dir $MMV_STATS_DIR
	fi
	rm -f $tmp.*
	$here/sudo $PCP_RC_DIR/pcp start | _filter_pcp_start
	_wait_for_pmcd
	_wait_for_pmlogger
	done_clean=true
    fi
    exit $status
}

trap "_cleanup" 0 1 2 3 15

_filter()
{
    sed \
	-e '/^mmv.test.interval/d' \
	-e '/^mmv.interval/d' \
    #
}

# real QA starts here
home="$PCP_PMDAS_DIR"
iam=mmv
cd "$home/$iam"
unset ROOT

# copy the pmcd config file to restore state later.
cp $PCP_PMCDCONF_PATH "$tmp.pmcd.conf"
# move the MMV directory to restore contents later.
[ -d $MMV_STATS_DIR ] && $here/sudo mv -f $MMV_STATS_DIR $tmp.mmv.dir

# start from a known starting point
$here/sudo ./Remove >/dev/null 2>&1

mkdir "$MMV_STATS_DIR"
chmod 1777 "$MMV_STATS_DIR"

echo
echo "=== $iam agent installation ==="
$here/sudo ./Install </dev/null >$tmp.out 2>&1
_filter_pmda_install <$tmp.out

$here/src-oss/mmv_genstats

echo
echo "=== Listing with a valid process and with prefix ==="
$here/src-oss/mmv_poke -p $$ -f process "$MMV_STATS_DIR/test"
pmprobe -v mmv | _filter

echo "=== Listing with a valid process and without prefix ==="
$here/src-oss/mmv_poke -p $$ -f noprefix "$MMV_STATS_DIR/test"
pmprobe -v mmv | _filter

echo "=== Listing without a valid process ==="
$here/src-oss/mmv_poke -p 4294967295 -f process "$MMV_STATS_DIR/test"
pmprobe -v mmv | _filter

echo
echo "=== remove $iam agent ==="
$here/sudo ./Remove >$tmp.out 2>&1
_filter_pmda_remove <$tmp.out

status=0
exit
