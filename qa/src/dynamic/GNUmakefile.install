SHELL	= sh

ifdef PCP_CONF
include $(PCP_CONF)
else
PCP_DIR = $(shell echo $$PCP_DIR)
include $(PCP_DIR)/etc/pcp.conf
endif
include $(PCP_INC_DIR)/builddefs

IAM	= dynamic
CFILES	= $(IAM).c

CMDTARGET = pmda$(IAM)
TARGETS = $(LIBTARGET) $(CMDTARGET)

LDLIBS	= -lpcp_pmda -lpcp
LDIRT	= *.log help.dir help.pag

default: $(TARGETS)

install: default

include $(PCP_INC_DIR)/buildrules
