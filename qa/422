#!/bin/sh
# PCP QA Test No. 422
# pmStore(3) with changed pmAtomValue encoding for PM_TYPE_AGGREGATE
# pmstore(1) with PM_TYPE_STRING
#
# Copyright (c) 2010 Ken McDonell.  All Rights Reserved.
#

# get standard environment, filters and checks
. ./common.product
. ./common.filter
. ./common.check

seq=`basename $0`

# sane starting point
src-oss/aggrstore sample.aggregate.write_me 13 >/dev/null
src-oss/aggrstore sampledso.aggregate.write_me 13 >/dev/null
pmstore sample.string.write_me 13 >/dev/null
pmstore sampledso.string.write_me 13 >/dev/null

echo "QA output created by $seq"

status=0	# success is the default!
$sudo rm -rf $tmp.* $seq.full
trap "rm -f $tmp.*; exit \$status" 0 1 2 3 15

# real QA test starts here
for val in "" A AB ABC ABCD ABCDE "mary had a little lamb"
do
    src-oss/aggrstore sample.aggregate.write_me "$val"
    src-oss/aggrstore sampledso.aggregate.write_me "$val"
    pmstore sample.string.write_me "$val"
    pmstore sampledso.string.write_me "$val"
done

# restore sanity
src-oss/aggrstore sample.aggregate.write_me 13 >/dev/null
src-oss/aggrstore sampledso.aggregate.write_me 13 >/dev/null
pmstore sample.string.write_me 13 >/dev/null
pmstore sampledso.string.write_me 13 >/dev/null

# success, all done
exit
