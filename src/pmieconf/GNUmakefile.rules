TOPDIR = ../../..
include $(TOPDIR)/src/include/builddefs
include localdefs

WORKDIR	:= $(shell pwd)
GROUP	:= $(shell basename $(WORKDIR))
RULES	= $(PCP_VAR_DIR)/config/pmieconf

LSRCFILES = localdefs $(RFILES)

LDIRT	= GNUmakefile

ifeq ($(TARGET_OS), linux)
DEFAULT	= $(LINUX_RFILES)
else
DEFAULT	= $(RFILES)
endif

CONFIGS	= $(subst "./","",$(DEFAULT))

default_pcp: $(DEFAULT)

install_pcp: install

install: default_pcp
	$(INSTALL) -d $(RULES)/$(GROUP)
	@for f in $(CONFIGS); do \
	    $(INSTALL) -m 644 $$f $(RULES)/$(GROUP)/$$f; \
	done

rules:
	@test ! -d ../rules/$(GROUP) && mkdir ../rules/$(GROUP); exit 0
	@rm -f ../rules/$(GROUP)/*
	@for f in IGNORE_DUMMY_RULE $(DEFAULT); do \
	    [ $$f = IGNORE_DUMMY_RULE ] && continue; \
	    cp ../$(GROUP)/$$f ../rules/$(GROUP)/$$f; \
	done

pmlogger.config:
	@if [ -n "$(CONFIGS)" ]; then sh ../xtractnames $(CONFIGS); fi

include $(BUILDRULES)
