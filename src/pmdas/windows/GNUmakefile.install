SHELL	= sh

ifdef PCP_CONF
include $(PCP_CONF)
else
include /etc/pcp.conf
endif

PATH    = $(shell . /etc/pcp.env; echo $$PATH)

IAM	= windows
CFILES	=

LIBTARGET =
CMDTARGET =
TARGETS =

DEBUG   = -DDEBUG
CFLAGS	= $(DEBUG)
LDOPTS	=
LDLIBS	= -lpcp_pmda -lpcp

LDIRT	= so_locations *.log

INSTALL	= install
CC	= $(PCP_CC_PROG)

default: $(TARGETS)

install: default

clean clobber:
	rm -f $(LDIRT) $(TARGETS)
