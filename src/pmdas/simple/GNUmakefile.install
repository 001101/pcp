SHELL	= sh

ifdef PCP_CONF
include $(PCP_CONF)
else
PCP_DIR = $(shell echo $$PCP_DIR)
include $(PCP_DIR)/etc/pcp.conf
endif

PATH    = $(shell . $$PCP_DIR/etc/pcp.env; echo $$PATH)

IAM	= simple
CFILES	= $(IAM).c

LIBTARGET = pmda_$(IAM).so
CMDTARGET = pmda$(IAM)
TARGETS = $(LIBTARGET) $(CMDTARGET)

DEBUG   = -DDEBUG
CFLAGS	= $(DEBUG)
LDOPTS	=
LDLIBS	= -lpcp_pmda -lpcp

ifeq "$(PCP_PLATFORM)" "solaris"
DSOOPTS	= -fpic -shared 
else
DSOOPTS = -fPIC -shared -Wl,-soname,$(LIBTARGET)
endif

LDIRT	= so_locations *.log help.dir help.pag *.pmda_$(IAM).so

INSTALL	= install
CC	= $(PCP_CC_PROG)

default: $(TARGETS)

install: default

$(CMDTARGET): $(CFILES)
	$(CC) $(CFLAGS) $(CFILES) $(LDOPTS) $(LDLIBS) -o $@

$(LIBTARGET): $(CFILES)
	$(CC) $(CFLAGS) $(DSOOPTS) $(LDOPTS) $(CFILES) $(LDLIBS) -o $@

clean clobber:
	rm -f $(LDIRT) $(TARGETS)
