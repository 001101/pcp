# Install the Oracle PMDA
#

. $PCP_DIR/etc/pcp.env
. $PCP_SHARE_DIR/lib/pmdaproc.sh

iam=oracle
perl_opt=true
daemon_opt=false

if test -z "${ORACLE_HOME}"; then
    echo "ORACLE_HOME environment variable is not set"
    exit 1
elif test ! -d "${ORACLE_HOME}"; then
    echo "ORACLE_HOME is set, but it is not a directory"
    exit 1
elif text -x "${ORACLE_HOME}/perl/bin/perl"; then
    echo "ORACLE_HOME is set, but does not contain perl"
    exit 1
fi

# Run under the Oracle-shipped Perl, for DBI.
export PERL5LIB="${PERL5LIB}:${ORACLE_HOME}/perl/lib:${ORACLE_HOME}/perl/lib/site_perl";
export LD_LIBRARY_PATH="${LD_LIBRARY_PATH}:${ORACLE_HOME}/lib32:${ORACLE_HOME}/lib";

${ORACLE_HOME}/perl/bin/perl -e "use DBI" 2>/dev/null
if test $? -ne 0; then
    echo "Perl database interface (DBI) is not installed"
    exit 1
fi

# TODO: need to ask for user/pass and SIDs, write $PCP_VAR_DIR/config/oracle/oracle.conf
# (unless it exists)

pmdaSetup
pmdaInstall
exit 0
