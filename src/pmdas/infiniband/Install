. /etc/pcp.env
. $PCP_SHARE_DIR/lib/pmdaproc.sh

iam=ib
pmda_interface=3
daemon_opt=true
dso_opt=false
pipe_opt=true
socket_opt=false

#
# override "choose mode"
__choose_mode()
{
    do_pmda=true
}

#
# override "choose IPC method"
__choose_ipc()
{
    ipc_type=pipe
    type="pipe  binary       $PCP_PMDAS_DIR/infiniband/pmda$iam"
}

pmdaSetup
cat domain.h pmns >$tmp.pmns
pmns_source=$tmp.pmns
pmns_name=infiniband

pmdaInstall
exit 0
