# Install the named PMDA
#

. $PCP_DIR/etc/pcp.env
. $PCP_SHARE_DIR/lib/pmdaproc.sh

iam=named
perl_opt=true
daemon_opt=false

if ! test -d /var/named/data -a ! -d /var/named/chroot/var/named/data; then
    echo "named does not appear to be exporting statistics"
    echo "Pushing on regardless, but no metric values may appear."
fi

pmdaSetup
pmdaInstall
exit 0
