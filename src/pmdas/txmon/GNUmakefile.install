IAM	= txmon
CFILES	= $(IAM).c
OBJECTS	= $(CFILES:.c=.o)
TARGETS	= pmda$(IAM) txrecord
DEBUG   = -DDEBUG
CFLAGS	= $(DEBUG)
LDOPTS	=
LDLIBS	= -lpcp_pmda -lpcp
LDIRT	= so_locations *.log help.dir help.pag *.pmda_$(IAM).so

CC	= $(PCP_CC_PROG)

default: $(TARGETS)

install:	default

pmda$(IAM):	txmon.h domain.h $(CFILES)
	@[ -x `which $(CC)` ] || ( echo "No C compiler? ... skip remaking $@" ; exit 1)
	rm -f $@
	$(CC) $(CFLAGS) -o $@ txmon.c $(LDOPTS) $(LDLIBS)

txrecord:	txmon.h txrecord.c
	@[ -x `which $(CC)` ] || ( echo "No C compiler? ... skip remaking $@" ; exit 1)
	rm -f $@
	$(CC) $(CFLAGS) -o $@ txrecord.c

clobber:
	@[ -x `which $(CC)` ] || ( echo "No C compiler? ... skip clobber" ; exit 1)
	rm -f $(LDIRT) $(TARGETS)
