SHELL	= /bin/sh
CC	= cc
TARGETS	= lib/libpcp_trace.so.2 lib/libpcp_trace.so 
CFILES	= stub.c
CFLAGS += -DPMTRACE_DEBUG
HAVE_64	= $(shell test `uname -m` = "ia64" && echo 1 || echo 0)
ifeq ($(HAVE_64), 1)
CFLAGS += -fpic -fno-strict-aliasing
endif
LDIRT	= lib lib32 lib64

default: $(TARGETS)

lib/libpcp_trace.so.2: stub.c
	-[ ! -d lib ] && mkdir lib
	rm -f $@
	cd lib; $(CC) $(CFLAGS) -shared ../stub.c -o $(@F)

lib/libpcp_trace.so:	lib/libpcp_trace.so.2
	rm -f $@
	cd lib; ln -s libpcp_trace.so.2 libpcp_trace.so

clean:
	rm -rf $(LDIRT)

clobber:
	rm -rf $(LDIRT) $(TARGETS)

