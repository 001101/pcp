# Will count the number of daemons and other processes running every
# 5 seconds

# source the PCP configuration environment variables
. $PCP_DIR/etc/pcp.env

while true
do
    $PCP_PS_PROG -e \
    | $PCP_AWK_PROG '
/d *$/	{ daemon++; next }
	{ other++ }
END	{ print "'"`date +'%a %b %e %T %Y'`"', daemon=" daemon " other=" other }'
    
    sleep 5
done
