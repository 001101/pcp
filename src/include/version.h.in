#ifndef VERSION_H
#define VERSION_H

#define VERSION "@pkg_version@"
#define HTMLDIR "@pkg_html_dir@"

#define PM_USE_CONTEXT_LOCAL 1

#define HAVE_PM_SET_PROGNAME @have_pm_set_progname@
#if HAVE_PM_SET_PROGNAME == 0
#include <libgen.h>
extern char *pmProgname;
static inline void __pmSetProgname(char *p) { pmProgname = basename(p); }
#endif

#define HAVE_PM_PATH_SEPARATOR @have_pm_path_separator@
#if HAVE_PM_PATH_SEPARATOR == 0
static inline int __pmPathSeparator(void) { return '/'; }
#endif

#define HAVE_PM_TIMEVAL_NOW @have_pm_timeval_now@
#if HAVE_PM_TIMEVAL_NOW == 0
static inline void __pmtimevalNow(struct timeval *t) { gettimeofday(t, NULL); }
#endif

#endif // VERSION_H
