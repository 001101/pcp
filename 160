#! /bin/sh
# PCP QA Test No. 160
# $Revision: 1.1 $
#
# Exercise __pmSetClientId()
#
# Copyright (c) 2009 Ken McDonell.  All Rights Reserved.

# creator
owner=kenj

seq=`basename $0`
echo "QA output created by $seq"

# get standard environment, filters and checks
. ./common.product
. ./common.filter
. ./common.check

tmp=/tmp/$$
here=`pwd`
sudo=$here/sudo
status=0	# success is the default!
$sudo rm -rf $tmp.*
trap "rm -f $tmp.*; exit \$status" 0 1 2 3 15

_filter()
{
    egrep 'QA-clientid|Error|__pmSetClientId' \
    | sed -e 's/value ".* QA/value "<host> QA/' \
    | sort -u \
    | sed -e 's/\[/[ /' -e 's/]/ ]/' \
    | awk '
BEGIN		{ seq = 1 }
$1 == "inst"	{ if (seen[$3] == "") {
		    seen[$3] = "INST-" seq++
		  }
		  $5 = "\"" seen[$3] "\""
		  $3 = seen[$3]
		}
		{ print }'
}

# real QA test starts here
src-oss/clientid -l a bb ccc dddd eeeee ffffff ggggggg hhhhhhhh iiiiiiiii >$tmp.1 2>&1 &
pidlist="$pidlist $!"
sleep 1
src-oss/clientid -l foo-bar-mumble >$tmp.2 2>&1 &
pidlist="$pidlist $!"
sleep 1
src-oss/clientid -l "here is a longer string to go in the ident place holder to try things out that are not quite so short and boring" >$tmp.3 2>&1 &
pidlist="$pidlist $!"
sleep 1

kill -TERM $pidlist
wait

cat $tmp.? \
| _filter

# success, all done
exit
